# Practices
alias ls='ls -G'
alias ll='ls -l'
alias la='ls -ahlT'
alias rm='rm -i'
alias t="trash"
alias tailf='tail -f'
alias openports='lsof -Pan -i tcp -i udp'
alias binds="bind -P | grep 'can be'"
alias shortcuts="cat $HOME/shortcuts"
# Find out if any duplicate file exist in the current directory (From https://twitter.com/climagic)
alias dups="shasum * | awk -F' ' '_[$1]++'"

# Software
alias g='git'
alias rg='ranger'
alias ttytter='rlwrap ttytter'
alias jsc='/System/Library/Frameworks/JavaScriptCore.framework/Versions/Current/Resources/jsc'
alias fuck='eval $(thefuck $(fc -ln -1)); history -r'
alias fzsub='subl $(fzf)'
alias fzvim='vim $(fzf)'
alias be='bundle exec'

# MVX app
alias mvxstart='(cd /Users/igor/work/syadem/mvx && ./script/start.sh)'
alias mvxstop='(cd /Users/igor/work/syadem/mvx && ./script/stop.sh)'
alias mvxsetup='(cd /Users/igor/work/syadem/mvx && ./script/setup)'
alias mvxrestart='mvxstop || mvxstart'
alias mvxguard='(cd /Users/igor/work/syadem/mvx && guard)'
alias mvxtailf='(cd /Users/igor/work/syadem/mvx && tailf log/{test,development}.log)'
alias stage_mvx_branch='cap staging deploy -S branch=`git current-branch`'
alias stage_php_branch='./deploy.sh stage `git current-branch`'

