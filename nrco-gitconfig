[alias]
	amend = commit --amend
	s = status --short
	ci = commit
	co = checkout
	pop = reset HEAD^
	wip = commit -a -m 'WIP'
	graph = log --color --graph --abbrev-commit
	g = graph
	head = symbolic-ref --short HEAD
	upstream = !git rev-parse --abbrev-ref $(git head)@{upstream}
	publish = !git push -u origin HEAD
	coz = !git branch |fzf --height=`git branch|wc -l|awk '{print $1+2}'`|xargs git checkout
	actors = diff --name-only
	forest = branch -vv
	f = forest

[format]
	pretty = "%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%C(bold blue)<%an>%Creset"

[core]
	pager = "batcat --plain"
	editor = vim

[interactive]
	diffFilter = delta --color-only

[delta]
	navigate = true    # use n and N to move between diff sections
	light = false      # set to true if you're in a terminal w/ a light background color (e.g. the default macOS terminal)

[merge]
	conflictstyle = diff3

[diff]
	colorMoved = default

[delta]
	side-by-side = true
